                <TextView
                    android:id="@+id/textView_HR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" HR = "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#800000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView_heartrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#800000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView_BIA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         BIA = "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#008b8b"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView_bodyImpedance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,000"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#008b8b"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView_Urine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="         Urine="
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff8800"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView_moisturesensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8,200"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff8800"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/start_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Start" />

                <Button
                    android:id="@+id/bia_rot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIA set" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save" />

            </LinearLayout>

            <TextView
                android:id="@+id/save_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="8pt"
                android:text="File name,  kB" />

